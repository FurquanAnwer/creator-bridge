{
  "extends": "@repo/typescript-config/base.json",
  "compilerOptions": {
      "jsx": "react",
      "outDir": "./dist",
      "rootDir": "./src",
      "strict": true,
      "noImplicitAny": true,
      "strictNullChecks": true,
      "strictFunctionTypes": true,
      "strictBindCallApply": true,
      "noImplicitThis": true,
      "alwaysStrict": true,
      "skipLibCheck": false,
      "esModuleInterop": true,
      "resolveJsonModule": true,
      "isolatedModules": true
  }
}